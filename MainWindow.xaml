<Window x:Class="MouseClickSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseClickSender"
        mc:Ignorable="d"
        Title="ClickSender" 
        Height="309" 
        Width="223" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="164" Margin="0 5 0 5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="坐标 X,Y:"/>
                <TextBox x:Name="tbX" Text="961" Width="35" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="tbY" Text="628" Width="35" TextAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5 0 5">
                <Label Content="间隔时间"/>
                <TextBox x:Name="tbHH" Text="00" Width="30" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="tbMM" Text="20" Width="30" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="tbSS" Text="00" Width="30" TextAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5 0 20">
                <Label Content="定时(HH MM)"/>
                <TextBox x:Name="tbHH2" Text="00" Width="30" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="tbMM2" Text="00" Width="30" TextAlignment="Center" VerticalContentAlignment="Center"/>                
            </StackPanel>

            <CheckBox x:Name="chkType" Content="定时执行" IsChecked="False" Margin="0 5 0 5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" />
            <CheckBox x:Name="chkWhere" Content="是否循环" IsChecked="True"  Margin="0 5 0 5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" />

            <Button x:Name="btnRun"  Content="开启" Margin="0 10 0 10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" Click="btnRun_Click"/>

            <StackPanel Orientation="Horizontal">
                <Label Content="预计执行时间:"/>
                <Label x:Name="lblNextClickIn" Content="--:--:--"/>
            </StackPanel>
        </StackPanel>

    </DockPanel>
</Window>
